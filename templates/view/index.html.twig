<main class="container mx-auto max-w-screen-lg">
    <article class="flex flex-col bg-white shadow-xl rounded-md p-8">
        <div class="container mx-auto px-6">
            <h3 class="text-gray-700 text-2xl font-medium">Latest</h3>
            <span class="mt-3 text-sm text-gray-500">{{ posts|length }}</span>
            
            <div class="grid gap-6 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 mt-6">

                {% for post in posts %}
                <div class="w-full max-w-sm mx-auto rounded-md shadow-md overflow-hidden">
                    <a href="{{ path('view_post', {post: post.id}) }}">
                        <div class="flex items-end justify-end h-56 w-full bg-cover" style="background-image: url('https://images.unsplash.com/photo-1495856458515-0637185db551?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=750&q=80')">
                        </div>
                    </a>
                    <div class="px-5 py-3">
                        <h3 class="text-gray-700 uppercase"><a href="{{ path('view_post', {post: post.id}) }}">{{ post.title }}</a></h3>
                        <span class="text-gray-500 mt-2">{{ post.information }}</span>
                    </div>
                </div>
                {% endfor %}

            </div>
            
        </div>
    </article>
</main>










</div>
